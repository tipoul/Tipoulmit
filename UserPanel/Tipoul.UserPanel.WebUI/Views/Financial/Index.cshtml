@section scripts {
    <script>

        var transactionModalAjax;

        $(document).ready(function () {
            $("select[name=wageType]").change(function () {
                if ($(this).val() == '@((int)Tipoul.Framework.StorageModels.UserWageTypeHistory.UserWageType.FromTransactionStaticAmount)')
                    $(".amount-input-container").show();
                else
                    $(".amount-input-container").hide();
            })
        });

        function openModal(id) {
            debugger

            if (id.indexOf(',') != -1) {
                $(".transaction-detail-link-" + id)[0].click();
            }
            else {

                $("#transactionModal").modal("show");

                var body = $("#transactionModal").find(".modal-body");

                body.html("<div class='text-center py-5 my-5'><span class='fa fa-spin fa-spinner fa-3x'></span></div>");

                if (transactionModalAjax)
                    transactionModalAjax.abort();

                transactionModalAjax = $.ajax({
                    url: "/report/transactionModal/" + id,
                    success: function (response) {
                        body.html(response);
                        $(".btn-save-description").click(function () {
                            var btn = $(this);
                            var oldHtml = btn.html();

                            btn
                                .html("<i class='fa fa-spin fa-spinner'></i>")
                                .prop("disabled", true);

                            var input = $(".input-description")
                                .prop("disabled", true);

                            $.ajax({
                                url: "/report/saveDescription",
                                method: "POST",
                                data: {
                                    id: input.data("id"),
                                    description: input.val()
                                },
                                success: function () {
                                    btn
                                        .html("ذخیره شد")
                                        .prop("disabled", false);

                                    setTimeout(function () {
                                        btn
                                            .html(oldHtml);
                                    }, 3000);

                                    input.prop("disabled", false);
                                }
                            });
                        });
                    }
                })
            }
        }
    </script>
