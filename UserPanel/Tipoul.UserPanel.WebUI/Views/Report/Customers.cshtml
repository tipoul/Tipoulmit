                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th><span>نام و نام خانوادگی</span></th>
                                    <th><span>شماره تماس</span></th>
                                    <th><span>تعداد تراکنش های موفق</span></th>
                                    <th><span>تعداد تراکنش های ناموفق</span></th>
                                    <th><span>جمع مبالغ/میانگین</span></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Items)
                                {
                                    <tr>
                                        <td><span>@item.PayerName</span></td>
                                        <td><span>@(item.PayerMobile ?? "ثبت نشده")</span></td>
                                        <td><span>@item.SuccessTransactions.ToString("n0") از @item.TotalTransactions.ToString("n0")</span></td>
                                        <td><span>@((item.TotalTransactions - item.SuccessTransactions).ToString("n0")) از @item.TotalTransactions.ToString("n0")</span></td>
                                        <td><span>@item.Amount.ToString("n0")</span></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        @if (Model.Items.Count == 0)
                        {
                            <div class="alert alert-warning text-center mt-5">هیچ رکوردی برای نمایش وجود ندارد</div>
                        }

