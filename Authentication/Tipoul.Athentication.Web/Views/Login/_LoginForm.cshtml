                    <input type="checkbox" name="remember" />
                    <span></span>
                    مرا به خاطر بسپار
                </label>
            </div>
            <a href="javascript:;" id="kt_login_forgot" class="text-white font-weight-bold">کلمه عبور را فراموش کرده اید؟</a>
        </div>*@
        <div class="form-group text-center mt-10">
            <button type="submit" id="kt_login_signin_submit" class="btn btn-pill btn-outline-white font-weight-bold opacity-90 px-15 py-3">ورود</button>
        </div>
    </form>
