@model LoginFormViewModel

<!--begin::Login Sign in form-->
<div class="login-signin">
    <div class="mb-20">
        <h3>ورود به تیپول</h3>
        <p class="opacity-60 font-weight-bold">جهت ورود و یا ثبت نام در تیپول، شماره موبایل خود را وارد نمایید</p>
    </div>
    <form id="resultForm" action="@Model.RedirectUrl" method="post" enctype="multipart/form-data">
        <input type="hidden" id="token" name="token" />
    </form>
    <form class="form" action="/" id="kt_login_signin_form" method="post">
        <div class="form-group">
            <input class="form-control h-auto text-white placeholder-white opacity-70 bg-dark-o-70 rounded-pill border-0 py-4 px-8 mb-5" type="text" placeholder="شماره موبایل" id="UserName" name="UserName" autocomplete="on" required />
        </div>
        <div class="form-group" style="display: none;">
            <input class="form-control h-auto text-white placeholder-white opacity-70 bg-dark-o-70 rounded-pill border-0 py-4 px-8 mb-5" type="text" id="SecondInput" />
            <span class="text-danger" style="display: none;" id="invelidVerificationCode">کد احراز هویت اشتباه است</span>
        </div>
        @*<div class="form-group d-flex flex-wrap justify-content-between align-items-center px-8">
